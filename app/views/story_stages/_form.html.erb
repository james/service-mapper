<%= form_for [@story, @story_stage], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="group">
    <%= f.label :description, "Stage name" %>
    <p class="form-hint">This should describe what happens in that stage between the system. eg. 'Request Confirmation sent to citizen'.</p>
    <%= f.text_field :description %>
  </div>

  <%= render :partial => 'system_form', :locals => {:direction => "from", :f => f} %>

  <div class="group">
    <fieldset>
      <p>Mode</p>
      <% StoryStage.modes.each do |mode| %>
        <label>
          <%= f.radio_button :payload, mode %>
          <%= mode %>
        </label>
      <% end %>
    </fieldset>
  </div>

  <%= render :partial => 'system_form', :locals => {:direction => "to", :f => f} %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                story_story_stages_path(@story), :class => 'btn' %>
  </div>
<% end %>

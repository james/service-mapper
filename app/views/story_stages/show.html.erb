<% breadcrumb @story_stage %>
<%- model_class = StoryStage -%>
<div class="page-header">
  <h1>Transaction Stage</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:story_id) %>:</strong></dt>
  <dd><%= @story_stage.story_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payload) %>:</strong></dt>
  <dd><%= @story_stage.payload %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @story_stage.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:average_time) %>:</strong></dt>
  <dd><%= @story_stage.chronic_duration_average_time %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              story_story_stages_path(@story), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_story_story_stage_path(@story, @story_stage), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              story_story_stage_path(@story, @story_stage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to "Add another",
            new_story_story_stage_path(@story),
            :class => 'btn' %>
</div>

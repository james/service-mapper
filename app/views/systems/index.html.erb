<%- model_class = System -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Transactions</th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:owner_email) %></th>
      <th><%= model_class.human_attribute_name(:supplier) %></th>
      <th><%= model_class.human_attribute_name(:technology) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:hosting) %></th>
      <th><%= model_class.human_attribute_name(:network) %></th>
      <th><%= model_class.human_attribute_name(:decommissioning) %></th>
      <th><%= model_class.human_attribute_name(:source_code_url) %></th>
      <th><%= model_class.human_attribute_name(:technical_support_contact) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= link_to system.name, system_path(system) %></td>
        <td><%= link_to system.stories.size, stories_path(:system_id => system) %></td>
        <td><%= system.owner %></td>
        <td><%= system.owner_email %></td>
        <td><%= system.supplier %></td>
        <td><%= system.technology %></td>
        <td><%= system.status %></td>
        <td><%= system.hosting %></td>
        <td><%= system.network %></td>
        <td><%= system.decommissioning %></td>
        <td><%= system.source_code_url %></td>
        <td><%= system.technical_support_contact %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_system_path(system), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      system_path(system),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_system_path,
            :class => 'btn btn-primary' %>

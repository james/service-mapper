<% breadcrumb :stories, @service %>
<%- model_class = Story -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= form_tag nil, :method => :get, :class => 'form-inline' do |form| %>
  Filter by <%= select_tag :service_id, options_for_select([["All Services", nil]] + Service.all.collect{|x| [x.name, x.id]}, params[:service_id]) %> or 
  <%= select_tag :system_id, options_for_select([["All Systems", nil]] + System.all.collect{|x| [x.name, x.id]}, params[:system_id]) %>
  <%= submit_tag "Filter", :name => nil, :class => 'btn' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Stages</th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:replaces_story) %></th>
      <th>Duration</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= link_to story.name, story_path(story) %></td>
        <td>
          <%= link_to story.story_stages.count, story_story_stages_path(story) %>
        </td>
        <td><%= story.status %></td>
        <td><%= story.owner %></td>
        <td><%= story.description %></td>
        <td>
          <% if story.replaces_story %>
            <%= link_to story.replaces_story.name, story_path(story.replaces_story) %>
          <% end %>
        </td>
        <td>
          <%= story.average_time_string %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_story_path(story), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      story_path(story),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "View as graph", graph_stories_path(@service, :service_id => params[:service_id], :system_id => params[:system_id]) %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_story_path,
            :class => 'btn btn-primary' %>

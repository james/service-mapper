<%- model_class = Story -%>
<%= render :partial => 'header' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Stages</th>
      <th><%= model_class.human_attribute_name(:service) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:replaces_story) %></th>
      <th>Duration</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= link_to story.name, story_path(story) %></td>
        <td>
          <%= link_to story.story_stages.count, story_story_stages_path(story) %>
        </td>
        <td><%= story.service.name if story.service %></td>
        <td><%= story.status %></td>
        <td><%= story.owner %></td>
        <td><%= story.description %></td>
        <td>
          <% if story.replaces_story %>
            <%= link_to story.replaces_story.name, story_path(story.replaces_story) %>
          <% end %>
        </td>
        <td>
          <%= story.average_time_string %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_story_path(story), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      story_path(story),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add a transaction", new_story_path %>
